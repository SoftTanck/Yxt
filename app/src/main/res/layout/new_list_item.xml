<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/xwhite"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/fl_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_date_bg" />

        <TextView
            android:id="@+id/tv_news_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.0dip"
            android:textColor="@android:color/white" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_news_head"
            android:layout_width="100.0dip"
            android:layout_height="62.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip" />

        <RelativeLayout
            android:id="@+id/rl_new"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:singleLine="true"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_news_decraption"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_below="@id/tv_news_title"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5.0dip"
                android:textColor="@android:color/darker_gray"
                android:textSize="12.0sp" />

            <TextView
                android:gravity="center"
                android:id="@+id/bt_news_type"
                android:layout_width="65.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7.0dip"
                android:layout_marginRight="10.0dip"
                android:background="#ff1a9bda"
                android:textColor="@android:color/white"
                android:textSize="12.0sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>