<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/course_signup_parent_item_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/news_top_title_shape"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="2015年8月27日15:20:48" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/tmp_head_1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="测试测试测试测试测试测试测试测试测试测试测试测试"
                    android:textColor="@color/xblack" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="测试测试"
                    android:textColor="@color/gray_black" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" />


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_quaner_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_v4_news_read" />

            <TextView
                android:id="@+id/tv_quaner_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_quaner_read"
                android:text="339"
                android:textColor="@color/gray_black" />

            <ImageView
                android:id="@+id/iv_quaner_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_quaner_read"
                android:src="@drawable/ic_v4_news_praise" />

            <TextView
                android:id="@+id/tv_quaner_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_quaner_praise"
                android:text="125"
                android:textColor="@color/gray_black" />


            <ImageView
                android:id="@+id/iv_quaner_news"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_quaner_praise"
                android:src="@drawable/midh_news_comment_icon" />

            <TextView
                android:id="@+id/tv_quaner_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_quaner_news"
                android:text="33"
                android:textColor="@color/gray_black" />

            <ImageView
                android:id="@+id/iv_quaner_share"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_quaner_news"
                android:src="@drawable/midh_news_share_icon" />

            <TextView
                android:id="@+id/tv_quaner_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_quaner_share"
                android:text="6"
                android:textColor="@color/gray_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <View
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="@dimen/quaner"
                    android:background="#eeeeee" />

                <TextView
                    android:id="@+id/tv_quaner_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专题活动"
                    android:textColor="@color/gray_black" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>