<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/holo_blue_bright" />
            <stroke android:width="1.0dip" android:color="#ff808080" />
            <corners android:radius="8.0dip" />
            <gradient android:centerColor="@color/holo_blue_bright" android:endColor="@color/holo_blue_bright" android:startColor="@color/holo_blue_bright" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/holo_blue_bright" />
            <stroke android:width="1.0dip" android:color="#ff808080" />
            <corners android:radius="8.0dip" />
            <gradient android:centerColor="@color/holo_blue_bright" android:endColor="@color/holo_blue_bright" android:startColor="@color/holo_blue_bright" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="1.0dip" android:color="#ff808080" />
            <corners android:radius="8.0dip" />
        </shape>
    </item>
</selector>